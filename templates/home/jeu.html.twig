{% extends 'base.html.twig' %}

{% block title %}{{ jeu.titre }}{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center animate__animated animate__zoomIn img-card">
                <img src="{{ asset(image_dir ~ jeu.image) }}" alt="{{ jeu.titre }}" class="img-fluid">
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center flex-column">
                <a href="{{ jeu.url }}" target="_blank">
                    <h1 class="titre-jeu mt-4 mb-3 animate__animated animate__fadeInUp">{{ jeu.titre }}</h1>
                </a>
                <p class="description-jeu animate__animated animate__fadeInUp">{{ jeu.description }}</p>
                <div class="d-flex justify-content-between align-items-center div-buy mt-5 mb-5">
                    <p class="date-jeu animate__animated animate__fadeInUp">Sortie le : {{ jeu.date|date('d/m/Y') }}</p>
                    <a href="{{ jeu.url }}" target="_blank" class="btn-buy animate__animated animate__fadeInUp">Acheter</a>
                </div>
            </div>
        </div>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}